<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Medication - Medication Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="icon" href="/Star_of_life2.svg.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .mobile-menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 40;
            display: none;
        }

        .mobile-menu {
            position: fixed;
            top: 0;
            left: -100%;
            width: 80%;
            max-width: 300px;
            height: 100%;
            background-color: white;
            z-index: 50;
            transition: left 0.3s ease-in-out;
            overflow-y: auto;
        }

        .mobile-menu.active {
            left: 0;
        }
    </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Main Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-8">
                    <a href="/" class="text-xl font-semibold text-gray-800">
                        <i class="fas fa-pills mr-2 text-blue-600"></i>
                        Medication Tracker
                    </a>
                    <!-- Desktop Menu -->
                    <div class="hidden md:flex space-x-4">
                        <a href="/" class="text-gray-600 hover:text-blue-600 transition-colors">
                            <i class="fas fa-home mr-1"></i> Home
                        </a>
                        <a href="/medications" class="text-gray-600 hover:text-blue-600 transition-colors">
                            <i class="fas fa-list mr-1"></i> My Medications
                        </a>
                    </div>
                </div>
                <!-- Mobile Menu Button -->
                <div class="md:hidden flex items-center">
                    <button id="mobile-menu-button" class="text-gray-600 hover:text-blue-600 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
                <!-- Desktop Logout -->
                <div class="hidden md:block">
                    <a href="/logout" class="text-red-600 hover:text-red-800 transition-colors">
                        <i class="fas fa-sign-out-alt mr-1"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu-overlay" class="mobile-menu-overlay"></div>

    <!-- Mobile Menu Panel -->
    <div id="mobile-menu" class="mobile-menu">
        <div class="px-4 py-6">
            <div class="flex justify-between items-center mb-8">
                <h3 class="text-xl font-semibold text-gray-800">Menu</h3>
                <button id="close-menu-button" class="text-gray-600 hover:text-blue-600 focus:outline-none">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <nav class="space-y-4">
                <a href="/" class="block text-gray-600 hover:text-blue-600 py-2 px-3 rounded-lg hover:bg-gray-50">
                    <i class="fas fa-home mr-2"></i> Home
                </a>
                <a href="/medications"
                    class="block text-gray-600 hover:text-blue-600 py-2 px-3 rounded-lg hover:bg-gray-50">
                    <i class="fas fa-list mr-2"></i> My Medications
                </a>
                <hr class="my-4 border-gray-200">
                <a href="/logout" class="block text-red-600 hover:text-red-800 py-2 px-3 rounded-lg hover:bg-red-50">
                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                </a>
            </nav>
        </div>
    </div>

    <main class="max-w-4xl mx-auto mt-10 px-4">
        <div class="bg-white rounded-xl shadow-md p-8">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Add Medication</h2>

            <form method="POST" id="add-medication-form" class="space-y-6">
                <!-- Basic Information -->
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Medication Name</label>
                        <input type="text" name="name"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                            required>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Dosage</label>
                        <input type="text" name="dosage"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                            required>
                    </div>
                </div>

                <!-- Schedule Information -->
                <div class="grid md:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Frequency (per day)</label>
                        <input type="number" name="frequency" min="1"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                            required>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Start Date</label>
                        <input type="date" name="start_date"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                            required>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">End Date</label>
                        <input type="date" name="end_date"
                            class="w-full px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                            required>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Notification Settings</h3>

                    <div class="space-y-4">
                        <div class="flex items-center mb-4">
                            <input type="checkbox" name="notifications_enabled" id="notifications_enabled"
                                class="h-4 w-4 text-blue-600" checked>
                            <label class="ml-2 text-gray-700">Enable Notifications</label>
                        </div>

                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Notification Method</label>
                            <div class="grid md:grid-cols-3 gap-4">
                                <label class="flex items-center">
                                    <input type="checkbox" name="notification_email" class="h-4 w-4 text-blue-600">
                                    <span class="ml-2">Email</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="checkbox" name="notification_push" class="h-4 w-4 text-blue-600">
                                    <span class="ml-2">Push Notification</span>
                                </label>
                            </div>
                        </div>

                        <div id="notification-times">
                            <label class="block text-gray-700 font-medium mb-2">Notification Times</label>
                            <div id="notification-container" class="space-y-3">
                                <div class="flex items-center space-x-2">
                                    <input type="time" name="notification_times[]"
                                        class="px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                                        required>
                                    <button type="button"
                                        class="bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600"
                                        onclick="addNotificationTime()">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="text-red-500 text-sm mt-2" id="notification-error"></div>
                        </div>

                        <!-- Reminder Settings -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2">Reminder Settings</label>
                            <div class="grid md:grid-cols-2 gap-4">
                                <select name="reminder_before"
                                    class="px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500">
                                    <option value="5">5 minutes before</option>
                                    <option value="10">10 minutes before</option>
                                    <option value="15">15 minutes before</option>
                                    <option value="30">30 minutes before</option>
                                </select>
                                <select name="reminder_repeat"
                                    class="px-4 py-2 border rounded-lg focus:ring-blue-500 focus:border-blue-500">
                                    <option value="0">No repeat</option>
                                    <option value="5">Repeat every 5 minutes</option>
                                    <option value="10">Repeat every 10 minutes</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="window.location.href='/'"
                        class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Add Medication
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script src="/js/add_medication.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const closeMenuButton = document.getElementById('close-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const overlay = document.getElementById('mobile-menu-overlay');

            function openMenu() {
                mobileMenu.classList.add('active');
                overlay.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }

            function closeMenu() {
                mobileMenu.classList.remove('active');
                overlay.style.display = 'none';
                document.body.style.overflow = '';
            }

            mobileMenuButton.addEventListener('click', openMenu);
            closeMenuButton.addEventListener('click', closeMenu);
            overlay.addEventListener('click', closeMenu);

            // Close menu on window resize if it goes above mobile breakpoint
            window.addEventListener('resize', () => {
                if (window.innerWidth >= 768) { // md breakpoint
                    closeMenu();
                }
            });

            // Handle ESC key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    closeMenu();
                }
            });

            // Add end date validation and auto-shutdown setup
            const form = document.getElementById('add-medication-form');
            const endDateInput = form.querySelector('input[name="end_date"]');
            const startDateInput = form.querySelector('input[name="start_date"]');

            // Validate end date is after start date
            startDateInput.addEventListener('change', validateDates);
            endDateInput.addEventListener('change', validateDates);

            function validateDates() {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);

                if (endDate < startDate) {
                    endDateInput.setCustomValidity('End date must be after start date');
                } else {
                    endDateInput.setCustomValidity('');
                }
            }

            // Setup auto-shutdown on form submit
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                const formData = new FormData(form);
                const endDate = new Date(formData.get('end_date'));
                const now = new Date();

                if (endDate < now) {
                    alert('Cannot set end date in the past');
                    return;
                }

                // Calculate milliseconds until end date
                const timeUntilEnd = endDate.getTime() - now.getTime();

                // Setup automatic shutdown
                if (timeUntilEnd > 0) {
                    // Store shutdown timer in localStorage
                    localStorage.setItem('medicationEndTime_' + formData.get('name'), endDate.getTime());

                    // Setup shutdown timeout
                    setTimeout(() => {
                        // Make API call to disable medication
                        fetch('/api/medications/disable', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                medicationName: formData.get('name'),
                                endDate: endDate
                            })
                        });
                    }, timeUntilEnd);
                }

                // Submit the form
                form.submit();
            });
        });
    </script>
</body>

</html>